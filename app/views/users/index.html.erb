<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
    <div class="col-xs-3" style="background-color: white;">
    <!-- 左側のユーザーメニューここから -->
      <h1>User info</h1>
      <div class="profile-container">
        <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
        <table>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th> 
            <td><%= current_user.introduction %></td>
          </tr>
        </table>
            <p>
              <%= link_to edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' do %>
              <% end %>
            </p>
          <% if @new.errors.any? %>
            <p>error</p>
              <%= @new.errors.count %>件のエラーが発生しました
              <% @new.errors.full_messages.each do |message| %>
                <%= message %>
              <% end %>
          <% end %>
          <%= form_for(@new) do |f| %>
          <h1>New book</h1><br>
          Title<br>
          <%= f.text_field :title %><br>
          Opinion<br>
          <%= f.text_area :body %><br>
          <%= f.submit('Create Book',class: 'btn btn-primary') %>
          <% end %>
      </div>
    </div>
        <!-- 左側のユーザーメニューここまで -->
    <div class="col-xs-9">   
      <h1>Users</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>  
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>