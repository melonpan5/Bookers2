<div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
  <!-- <div class='col-md-3 col-md-offset-3'>
  </div> -->

  <div class="field row">

  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
       <p>error</p>
       <%= @book.errors.count %>件のエラーが発生しました
       <% @book.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
    <% end %>
     <label for="book_title">Title</label>
     <div class="col-xs-12 book_title" >
      <%= f.text_field :title %>
     </div>

     <div class="field row">
      <label for="book_opinion">Opinion</label>
      <textarea class="col-xs-12 book_body" ><%= f.text_area :body %></textarea>
     </div>

     <div class="actions row">
       <div class="btn btn-primary col-xs-12" data-disable-with="Update Book">
       <%= f.submit %>
       </div>
    <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    
    </div>
  <% end %>