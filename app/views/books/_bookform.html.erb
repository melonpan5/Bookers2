<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
    <div class="col-xs-3" style="background-color: white;">
      <h4><%=  notice %></h4>
        <h1>User info</h1>
            <div class="profile-container">
            <%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
                <table>
                  <tr>
                    <th>name</th>
                    <td><%= user.name %></td>
                </tr>
                  <tr>
                    <th>introduction</th> 
                    <td><%= user.introduction %></td>
            </tr>
          </table>
      <% if user == current_user %>
        <p><%= link_to edit_user_path(user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench ' do %><% end %></p>
      <% else %>
        <p><%= link_to user_path(user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench ' do %><% end %></p>
      <% end %>
 
        <%= form_for(new) do |f| %>
     <% if new.errors.any? %>
         <div id="error_explanation">
            <h3><%= new.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
             <% new.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
            </ul>
         </div>
        <% end %>
          <h1>New book</h1><br>
          Title<br>
          <%= f.text_field :title %><br>
          Opinion<br>
          <%= f.text_area :body %><br>
          <!-- <button type="button" class="btn btn-primary"> -->
            <%= f.submit('Create Book',class: 'btn btn-primary') %>
          <!-- </button><br> -->
        <% end %>
      </div>

