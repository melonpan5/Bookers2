<div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
    <div class="col-xs-3" style="background-color: white;">
    <!-- 左側のユーザーメニューここから -->
 <%= render 'books/bookform', user: @user,  new:@new %>

    <!-- 左側のユーザーメニューここまで -->
    </div>
    <div class="col-xs-9">   
      <h1>Book detail</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
         <tbody>
            <tr>
              <td><%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                <% end %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td><button class="btn btn-success"><%= link_to 'Edit', edit_book_path(@book) %></button></td>
              <td><button class="btn btn-warning"><%= link_to 'Destroy', book_path(@book), method: :delete %></button></td>
              <% end %>
            </tr> 
        </tbody>
      </table>
       <%=link_to @user.name, user_path(@book.user) %> 
    </div>
</div>
</div>